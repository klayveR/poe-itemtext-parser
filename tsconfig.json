{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "./dist",
        "allowJs": true,
        "module": "commonjs",
        "target": "es6",
        "declaration": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "paths": {
            "@root/*": ["src/*"],
            "@models/*": ["src/models/*"],
            "@functions/*": ["src/functions/*"],
            "@resource/*": ["src/resource/*"]
        }
    },
    "exclude": ["docs", "test", "node_modules", "dist"],
    "include": ["src/**/*.ts"]
}
